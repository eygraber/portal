{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "github-actions"
  ],
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 3,
  "packageRules": [
    {
      "groupName": "gradle-conventions",
      "automerge": true,
      "matchPackageNames": [
        "com.eygraber.conventions{/,}**"
      ]
    },
    {
      "groupName": "gradle-develocity-plugin",
      "automerge": true,
      "registryUrls": [
        "https://plugins.gradle.org/m2"
      ],
      "matchPackageNames": [
        "com.gradle.develocity{/,}**"
      ]
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "depType": "dependencies",
      "registryUrls": [
        "https://repo.maven.apache.org/maven2/",
        "https://dl.google.com/dl/android/maven2/",
        "https://plugins.gradle.org/m2"
      ]
    }
  ]
}
